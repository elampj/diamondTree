<div class="panel wide">

<%= form_for(@post_section) do |f| %>
  <% if @post_section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post_section.errors.count, "error") %> prohibited this post_section from being saved:</h2>

      <ul>
      <% @post_section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :icon %><br>
      <%= f.text_field :icon %>
    </div>
    <div class="field">
      <%= f.label :summary %><br>
      <%= f.text_area :summary, rows: "10" %>
    </div>
    <div class="field">
      <%= f.label :additional_text %><br>
      <%= f.text_area :additional_text, rows: "20" %>
    </div>
    <div class="field">
      <%= f.label :post_id %><br>
      <select name="post_section[post_id]">
        <% Post.all.each do |post| %>
          <option value="<%= post.id %>"><%= post.post_id_and_title %></option>
        <% end %>
      </select>
      <%#= f.collection_select(:post, :post_id, Post.all, :id, prompt: true) %>
    </div>
    <div class="actions">
      <%= f.submit class: "button" %>
    </div>
<% end %>

</div>