<div class="panel wide">

<%= form_for(@post_section) do |f| %>
  <% if @post_section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post_section.errors.count, "error") %> prohibited this post_section from being saved:</h2>

      <ul>
      <% @post_section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :icon %><div class="icon-options-link">( <a href="http://www.typicons.com/" target="_blank">See Options</a> )</div><br>
      <%= f.text_field :icon %>
    </div>
    <div class="field">
      <%= f.label :summary %><br>
      <%= f.text_area :summary, rows: "10", id: "eg-basic", class: "eg-basic text-small" %>
    </div>
    <div class="field">
      <%= f.label :additional_text %><br>
      <%= f.text_area :additional_text, rows: "20", class: "eg-basic text-small" %>
    </div>
    <div class="field">
      <%= f.label :post_id %><br>
      <%
        @post_section.post_id = params[ :post_id ]
      %>
      <%= collection_select(:post_section, :post_id, Post.all, :id, :post_id_and_title) %>
    </div>
    <div class="actions">
      <%= f.submit class: "button" %>
      <%= link_to "Cancel", :back, {:class=>"button"} %>
    </div>
<% end %>

</div>